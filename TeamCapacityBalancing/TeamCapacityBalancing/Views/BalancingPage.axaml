							<ItemsRepeater.ItemTemplate>
								<DataTemplate>
									<Border Margin="0,10,0,0" Padding="5">
										<TextBlock Text="{Binding Name}" IsVisible="{Binding #MenuToggle.IsChecked}"/>
									</Border>
								</DataTemplate>
							</ItemsRepeater.ItemTemplate>
						</ItemsRepeater>
					</StackPanel>

					<Border Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,0,0" Margin="10,0,10,0" IsVisible="{Binding #MenuToggle.IsChecked}"/>

